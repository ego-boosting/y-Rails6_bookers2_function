<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'70x70' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book, class: "book_#{book.id}", class: "btn btn-light" %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>